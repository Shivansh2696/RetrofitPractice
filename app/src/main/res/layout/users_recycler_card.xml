<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="30dp"
    android:backgroundTint="@color/myColour"
    android:padding="10dp"
    android:layout_marginTop="8dp"
    >

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/UserIDUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="15dp"
        android:text="ID:"
        android:textSize="15sp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/NameUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="150dp"
        android:text="Name:"
        android:textSize="15sp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/UserNameUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="15dp"
        android:text="UserName :"
        android:textSize="15sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/UserEmailUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:layout_marginStart="15dp"
        android:text="Email :"
        android:textSize="15sp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/UserAddressUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginStart="15dp"
        android:text="Address :"
        android:textSize="15sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/UserPhoneUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="205dp"
        android:layout_marginStart="15dp"
        android:text="Phone :"
        android:textSize="15sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/UserWebsiteUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="235dp"
        android:layout_marginStart="15dp"
        android:text="Website :"
        android:textSize="15sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/UserCompanyUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="260dp"
        android:layout_marginStart="15dp"
        android:text="Company :"
        android:textSize="15sp"
        android:textStyle="bold"
        />

</androidx.cardview.widget.CardView>